 <%layout("/layouts/boilerplate")%>

 <h2 class="mt-3 text-capitalize">
  <%= category %> Experiences
</h2>
 <div class="row row-cols-lg-3  row-col-md-2  row-cols-sm-1 mt-3"> 
<% for (let listing of listings) { %>
    <div class="col-md-4 mb-3">
      <a href="/listings/<%= listing._id %>" class="listing-links">
        <div class="card listing-card col">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height:20rem ;">
          <div class="card-body">
            <p class="card-text">
           <b> <%= listing.title%> </br></b>
            &#8377;<%= listing.price %>/night 
            <i class="tax-info"> +18% GST</i>
       </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>
 